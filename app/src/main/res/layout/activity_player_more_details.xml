<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#C70101"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="257dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageAdidas"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:forceDarkAllowed="false"
            app:srcCompat="@drawable/adidas_logo" />

        <ImageView
            android:id="@+id/imageChevrolet"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:forceDarkAllowed="false"
            app:srcCompat="@drawable/chevrolet_logo" />

        <ImageView
            android:id="@+id/imageAon"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:forceDarkAllowed="false"
            app:srcCompat="@drawable/aon_logo" />

        <ImageView
            android:id="@+id/imageKohler"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:forceDarkAllowed="false"
            app:srcCompat="@drawable/kohler_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Date of Birth"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/playerDOB"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Joined Date"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/playerJoinDate"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Debut Date"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/playerDebutDate"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Apperances"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/playerApperances"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/goalsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Goals"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/playerGoals"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/cleanSheetLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Clean Sheet"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/playerCleanSheet"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:textColor="@color/textBackCol"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="sans" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/moreWebButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/manu"
            android:text="More info"
            android:textColor="@color/textCol"
            android:textSize="24sp" />
    </LinearLayout>


</LinearLayout>